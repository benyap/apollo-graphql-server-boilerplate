{
  "compilerOptions": {
    "outDir": "build",
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "target": "es6",
    "module": "commonjs",
    "lib": ["es6", "esnext.asynciterable"],
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*"]
}
