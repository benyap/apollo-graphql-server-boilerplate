{
  "name": "apollo-graphql-server-boilerplate",
  "version": "0.0.1",
  "description": "An opinionated Apollo GraphQL server stack boilerplate to kickstart your next project",
  "main": "src/index.ts",
  "engines": {
    "npm": ">=5",
    "node": ">=8.10.0"
  },
  "scripts": {
    "start": "yarn build && concurrently -k \"tsc --watch --project tsconfig-build.json\" \"cpx src/**/*.graphql build -w\" \"nodemon -e ts,graphql build/index.js\"",
    "start:prod": "node build/index.js",
    "prebuild": "yarn build:clean",
    "build": "cpx src/**/*.graphql build && tsc --project tsconfig-build.json",
    "build:clean": "rimraf ./build",
    "graphql:generate": "ts-node internals/scripts/generate-graphql-schema.ts",
    "lint": "yarn lint:tslint:all",
    "lint:tslint": "tslint --project tslint.json --config tsconfig.json",
    "lint:tslint:all": "tslint --project tsconfig.json --config tslint.json 'src/**/*.ts'",
    "lint:tslint:fix": "tslint --project tsconfig.json --config tslint.json --fix",
    "lint:staged": "lint-staged",
    "prettify": "prettier --write",
    "presetup": "yarn add ts-node chalk shelljs -D",
    "setup": "ts-node ./internals/scripts/setup.ts",
    "clean": "ts-node ./internals/scripts/clean.ts",
    "clean:all": "yarn test:clean && yarn build:clean",
    "pretest": "yarn test:clean && yarn lint",
    "test": "cross-env NODE_ENV=test jest --coverage",
    "test:clean": "rimraf ./coverage && rimraf ./test-results",
    "test:ci": "cross-env NODE_ENV=test jest --coverage --ci --reporters=default --reporters=jest-junit",
    "test:watch": "cross-env NODE_ENV=test jest --watchAll",
    "test:updateSnapshot": "cross-env NODE_ENV=test jest --updateSnapshot",
    "test:upload-appveyor": "node ./internals/scripts/upload-tests-appveyor",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "codecov": "codecov"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bwyap/apollo-graphql-server-boilerplate.git"
  },
  "keywords": [
    "apollo",
    "apollo-server",
    "graphql",
    "boilerplate",
    "typescript"
  ],
  "author": "Ben Yap <contact@benyap.me>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bwyap/apollo-graphql-server-boilerplate/issues"
  },
  "jest-junit": {
    "outputDirectory": "test-results/jest",
    "outputName": "results.xml"
  },
  "homepage": "https://github.com/bwyap/apollo-graphql-server-boilerplate#readme",
  "devDependencies": {
    "@commitlint/cli": "7.5.2",
    "@commitlint/config-conventional": "7.5.0",
    "@commitlint/prompt-cli": "7.5.0",
    "@types/compression": "0.0.36",
    "@types/cors": "2.8.4",
    "@types/dotenv": "6.1.0",
    "@types/express": "4.16.1",
    "@types/graphql": "14.0.5",
    "@types/graphql-iso-date": "3.3.1",
    "@types/jest": "23.3.13",
    "@types/jest-cli": "23.6.0",
    "@types/moment-timezone": "0.5.10",
    "@types/morgan": "1.7.35",
    "@types/shelljs": "0.8.2",
    "@types/sinon": "7.0.5",
    "codecov": "3.1.0",
    "concurrently": "4.1.0",
    "coveralls": "3.0.2",
    "cpx": "1.5.0",
    "cross-env": "5.2.0",
    "graphqlgen": "0.6.0-rc2",
    "husky": "1.3.1",
    "jest": "23.6.0",
    "jest-cli": "23.6.0",
    "jest-junit": "6.2.1",
    "lint-staged": "8.1.3",
    "nodemon": "1.18.9",
    "prettier": "1.16.4",
    "rimraf": "2.6.3",
    "shelljs": "0.8.3",
    "sinon": "7.2.3",
    "ts-jest": "23.10.5",
    "ts-node": "8.0.2",
    "tslint": "5.12.1",
    "tslint-config-prettier": "1.17.0",
    "tslint-config-standard": "8.0.1",
    "typescript": "3.3.1"
  },
  "dependencies": {
    "@okgrow/graphql-scalars": "0.4.3",
    "apollo-server-express": "2.3.3",
    "axios": "0.18.0",
    "chalk": "2.4.2",
    "compression": "1.7.3",
    "cors": "2.8.5",
    "dataloader": "1.4.0",
    "dotenv": "6.2.0",
    "express": "4.16.4",
    "express-sslify": "1.2.0",
    "graphql": "14.1.1",
    "graphql-cost-analysis": "1.0.2",
    "graphql-iso-date": "3.6.1",
    "graphql-type-json": "0.2.1",
    "https": "1.0.0",
    "moment": "2.24.0",
    "moment-timezone": "0.5.23",
    "morgan": "1.9.1"
  }
}
